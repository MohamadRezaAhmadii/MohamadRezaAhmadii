@model IEnumerable<testWebsit.Models.Comments>
    @{
    ViewData["Title"] = "Index";
    }

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Hello Mohammadreza</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">New Created</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tittel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReplayText)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tittel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReplayText)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                    <a asp-action="Deleted" asp-route-id="@item.Id" class="btn btn-danger">Deleted</a> 
                    <a asp-action="Replay" asp-route-id="@item.Id" class="btn btn-success">Replay</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
